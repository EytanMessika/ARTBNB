<!-- Banner code -->
<div class="banner" style="background-image: linear-gradient(135deg, rgba(50,50,50,0.3) 5%, rgba(50,50,50,0.7) 57%), url('<%= image_path("background.jpg")%>');">
	<div class="banner-content">
		<h1 class="banner-title">You n' Art. </h1>
		<h3>Rent a <span class="minted">unique masterpiece</span> for your next <span class="minted">events.</span> </h3> <br>
     <div class="search-container">
     <%= form_tag(artworks_path, :method => "get", id: "search-form", class: "form-inline") do %>
      <%= select_tag :search, options_for_select(Artwork::ARTWORK_CATEGORY, params[:search]), prompt: "All categories", class: "navbar-wagon-search-input my-select-control" %>
      <%= text_field_tag :search_price, params[:search_price], placeholder: "Max daily budget (€)", class: "navbar-wagon-search-input my-text-control"%>
      <%= submit_tag "Take a look", :name => nil, class: "navbar-wagon-search-input form-control btn btn-home" %>
    <% end %>
    </div>
	</div>
</div>



<!-- Features code -->
<div class="container text-center padded features">
<h2 class="text-center">How it works</h2>
	<div class="row">
		<div class="col-xs-12 col-sm-6 col-md-4">
			<%= image_tag (asset_path 'check.png'), class: "features-img " %>
			<h3>Simple</h3>
			<p>Find an artwork you like. Book it. Have it delivered and set up wherever you want, to wow your guests or customers.</p>
		</div>
		<div class="col-xs-12 col-sm-6 col-md-4">
			<%= image_tag (asset_path 'statue.png'), class: "features-img" %>
			<h3>Beautiful</h3>
			<p>Our first rate art collectors have listed their most prized artworks.</p>
		</div>
		<div class="col-xs-12 col-sm-6 col-md-4">
			<%= image_tag (asset_path 'care.jpg'), class: "features-img" %>
			<h3>Safe</h3>
			<p>We get it: exposing a masterpiece at your venue can be intimidating. That’s why our services include best in class insurance policies, and on-demand security.</p>
		</div>
	</div>
</div>

<!-- Cards code -->
<div class="wrapper-grey padded">
	<div class="container">
		<h2 class="text-center">Best artworks of the moment</h2>
		<div class="row">
			<% Artwork.first(6).each do |artwork| %>
			<div class="col-xs-12 col-md-4 col-sm-6 ">
			<div class="card-white">
					<div id="card-category">
						<p> <%= artwork.category %> </p>
					</div>
					<div class="card-description">
						<h3><%= artwork.name %></h3>
						<h5> <%= artwork.artist_name %> </h5>
					</div>
					<div class="card-price">
						<p> <%= artwork.price %> € / day</p>
					</div>
					<div class="card-photo">
						<%= cl_image_tag artwork.photo, height: 110, crop: :fill %>
					</div>
					<div class="card-link">
						<%= link_to '', artwork, {class: "btn-card-link"} %>
					</div>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>


<!-- Newsletter code -->
<div class="text-center padded newsletter">
	<h2>Get news about our artworks</h2>
	<p>Leave us your mail and get awesome piece of arts</p>

<%= form_tag(subscribe_path) do %>
  <div class="form-group form-inline">
    <%= email_field_tag :email, '', placeholder: 'Email', class: 'form-control' %>
  </div>
  <div class="form-group form-inline">
    <%= submit_tag "Subscribe", class: 'btn btn-rounded' %>
  </div>
<% end %>

</div>








