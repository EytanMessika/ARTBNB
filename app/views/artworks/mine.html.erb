        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('placeholder.jpg');">
          <div class="card-description">
            <h2> <%= artwork.name %> </h2>
            <p> <%= artwork.artist_name %> </p>
            <p> <%= artwork.category %> </p>
            <p> <%= artwork.dimensions %> </p>
            <p> <%= artwork.price %> â‚¬ </p>
          </div>
          <%= link_to "", artwork_path(artwork), class: "card-link" %>
        </div>
      </div>
      <% end -%>
    </div>
  </div>
</div>